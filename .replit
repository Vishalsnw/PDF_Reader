run = "npm run dev"
[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "Build Android App"

[[workflows.workflow]]
name = "Build Android App"
author = 45581451
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export JAVA_HOME=$(find /nix/store -name \"*openjdk-17*\" -type d | head -1)"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export PATH=$JAVA_HOME/bin:$PATH"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export ANDROID_SDK_ROOT=$(find /nix/store -name \"*android-sdk*\" -type d | head -1)"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x ./gradlew"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew clean"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew assembleDebug --stacktrace"
